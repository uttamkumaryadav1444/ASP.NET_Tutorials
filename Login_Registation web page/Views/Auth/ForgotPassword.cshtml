@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="font-family: Arial, sans-serif; color: #333; text-align: center;">Forgot Password</h2>

<!-- Form starts here -->
<form asp-action="ForgotPassword" method="post" style="max-width: 400px; margin: 20px auto; padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">

    <!-- Email Input Field -->
    <div class="form-group">
        <label for="Email" style="font-weight: bold;">Email Address</label>
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Enter your registered email", required = "required" })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>

    <!-- Submit Button -->
    <button type="submit" style="width: 100%; padding: 10px; background-color: #007BFF; color: white; border: none; border-radius: 4px; font-size: 16px; cursor: pointer;">
        Send Reset Link
    </button>
</form>

<!-- Info message for the user (optional) -->
<div style="max-width: 400px; margin: 20px auto; text-align: center;">
    <p style="font-size: 14px; color: #555;">
        Enter your email address above to receive a link to reset your password.
    </p>
</div>

